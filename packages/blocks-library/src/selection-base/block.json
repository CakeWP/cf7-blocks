{
    "$schema": "https://json.schemastore.org/block.json",
    "apiVersion": 2,
    "name": "cf7-blocks/selection-base",
    "title": "Selection",
    "category": "text",
    "description": "Selection base",
    "keywords": [
        "selection"
    ],
    "version": "1.0.0",
    "textdomain": "cf7-blocks",
    "attributes": {
        "isMultipleSelect": {
            "type": "boolean",
            "default": false
        },
        "isFirstBlankItem": {
            "type": "boolean",
            "default": false
        },
        "type": {
            "type": "string",
            "enum": [
                "checkbox",
                "radio",
                "select"
            ],
            "default": "checkbox"
        },
        "items": {
            "type": "array",
            "default": [
                {
                    "label": "",
                    "checked": false
                }
            ]
        },
        "requiredText": {
            "type": "string",
            "default": "*"
        },
        "mainLabel": {
            "type": "string",
            "default": ""
        },
        "showLabel": {
            "type": "boolean",
            "default": false
        },
        "isRequired": {
            "type": "boolean",
            "default": false
        },
        "isLabelFirst": {
            "type": "boolean",
            "default": false
        },
        "id": {
            "type": "string",
            "default": ""
        },
        "name": {
            "type": "string",
            "default": ""
        },
        "autogeneratedName": {
            "type": "string",
            "default": ""
        },
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "right": "0",
                        "left": "0",
                        "bottom": "20px"
                    }
                }
            }
        }
    },
    "supports": {
        "spacing": {
            "margin": true
        }
    },
    "styles": []
}